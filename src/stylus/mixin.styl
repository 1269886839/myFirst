// 背景图片大小
bgs($url)
  background-image: url($url)
  background-repeat: no-repeat
  background-size: 100% 100%

// 圆角属性
br($radius)
  -webkit-border-radius: $radius
  -ms-border-radius: $radius
  -moz-border-radius: $radius
  -o-border-radius: $radius
  border-radius: $radius

// 上下左右剧中
center()
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

// 左右居中
lrCenter()
  position: absolute
  left: 50%
  transform: translateX(-50%)

// 上下居中
tbCenter()
  position: absolute
  top: 50%
  transform: translateY(-50%)

//宽高
wh($w, $h)
  width: $w
  height: $h

//宽高度
wh($width, $height)
  width: $width
  height: $height

//字体大小颜色
sc($size, $color)
  font-size: $size
  color: $color

//左上
ltposition($left, $top)
  position: absolute
  left: $left
  top: $top

//右上

rtposition($right, $top)
  position: absolute
  right: $right
  top: $top

//左下
lbposition($left, $bottom)
  position: absolute
  left: $left
  bottom: $bottom

//右下
rbposition($right, $bottom)
  position: absolute
  right: $right
  bottom: $bottom

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

//高度行高统一
hh($height)
  height: $height
  line-height: $height

// 过度
transiti($transiti, s, type)
  -webkit-transition: $transiti s type
  -moz-transition: $transiti s type
  -ms-transition: $transiti s type
  -o-transition: $transiti s type
  transition: $transiti s type

// 上三角
triangle-up($size, $color)
  wh(0, 0)
  border: $size solid transparent
  border-bottom-color: $color

// 下三角
triangle-down($size, $color)
  wh(0, 0)
  border: $size solid transparent
  border-top-color: $color

// 左三角
triangle-left($size, $color)
  wh(0, 0)
  border: $size solid transparent
  border-right-color: $color

// 右三角
triangle-right($size, $color)
  wh(0, 0)
  border: $size solid transparent
  border-left-color: $color